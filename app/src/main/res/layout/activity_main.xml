<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- DÒNG NÀY LÀ CÁI BẠN CẦN NHÌN: % PIN RẤT TO -->
        <TextView
            android:id="@+id/txtBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--%"
            android:textSize="80sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Tiêu đề cấu hình (nhỏ hơn, phía dưới) -->
        <TextView
            android:id="@+id/txtConfigTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cấu hình Telegram"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edtToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telegram Bot Token"
            android:inputType="textPassword"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtChatId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telegram Chat ID"
            android:inputType="text"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lưu cấu hình" />

            <View
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnTest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Test" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bấm Test để gửi thử tin nhắn và phát âm thanh.\nApp sẽ tự kiểm tra pin nền mỗi 15 phút."
            android:textSize="12sp"
            android:textColor="#555555"
            android:paddingTop="8dp" />

    </LinearLayout>
</ScrollView>
